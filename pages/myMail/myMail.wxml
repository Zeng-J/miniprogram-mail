<!--pages/reg/reg.wxml-->
<view class='index-bg'>
  <!-- 注册flex容器 -->
  <view class='wx-reg-box'>
    <view class='wx-reg-item'>
      <!-- 标题-start -->
      <view class='wx-reg-title'>
        <text style='margin-left:2em'>我的邮箱</text>
        <text style='float:right;'>刷新</text>
      </view>
      <!-- 标题-end -->
      <!-- 内容-start -->
      <view class='wx-email-box'>
        <view class='wx-email' wx:for="{{ [1,2,3,4,5,6,7] }}"  wx:key="item">
          <view class='wx-email-date'>
            <text class='wx-email-day'>{{ item }}\n</text>
            <text>2019.12</text>
          </view>
          <view class='wx-email-content'>
            <text>我有一句话想你对你说......</text>
          </view>
        </view>
      <view>
        <text>查看更多</text>
      </view>
      </view>
      <!-- 内容-end -->
    </view>
  </view>

  <van-tabbar active="{{ active }}" active-color="#f3ea12" bind:change="onChange">
    <van-tabbar-item icon="star-o">写信</van-tabbar-item>
    <van-tabbar-item icon="star-o" info="5">信籍</van-tabbar-item>
    <van-tabbar-item icon="star-o" info="20">广场</van-tabbar-item>
    <van-tabbar-item icon="star-o" dot>发现</van-tabbar-item>
    <van-tabbar-item icon="user-o">我的</van-tabbar-item>
  </van-tabbar>
</view>